	"version": "0.2.0",
	"configurations": [
		{
			"request": "launch",
			"name": "Debug the currently displayed tag source",
			"type": "node",
			"program": "${workspaceFolder}/runner/runner.mts",
			"cwd": "${workspaceFolder}",
			"env": {},
			"runtimeExecutable": "deno",
			"runtimeArgs": [
				"run",
				"--unstable",
				"--inspect-wait",
				"--allow-all"
			],
			"args": [
				"${relativeFile}"
			],
			"attachSimplePort": 9229
		}
	]
}
